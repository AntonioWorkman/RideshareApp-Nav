<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uwi.rideshareapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RideshareApp">
        <activity android:name=".UpdateProfileActivity"></activity>
        <activity android:name=".ProfileActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.RideshareApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VerifyActivity"
            android:theme="@style/Theme.RideshareApp.NoActionBar" />
        <activity
            android:name=".PhoneAuthActivity"
            android:theme="@style/Theme.RideshareApp.NoActionBar" />
        <activity android:name=".LoginOptionActivity" />
    </application>

</manifest>